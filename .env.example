# ==========================================
# TRADING BOT CONFIGURATION
# ==========================================

# API Credentials (Required)
# -------------------------
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here
OPENAI_API_KEY=your_api_key_here

# Basic Trading Settings (ONLY CHANGE INITIAL_INVESTMENT)
# -----------------------------------------------------
TRADING_PAIR=XRPUSDT          # Stable and liquid trading pair
INITIAL_INVESTMENT=10         # ðŸ‘ˆ CHANGE THIS VALUE ONLY (in USDT)
MAX_TRADES_PER_DAY=4          # Conservative number of trades

# Universal Safety Settings (DO NOT CHANGE)
# ---------------------------------------
INITIAL_STOP_LOSS_PERCENTAGE=0.20    # Tight stop loss for safety
TRAILING_STOP_PERCENTAGE=0.15        # Conservative trailing stop
DAILY_LOSS_LIMIT=2.0                # Maximum daily loss percentage
MAX_POSITION_SIZE_PERCENTAGE=25      # Never use more than 25% of investment

# Risk Controls (DO NOT CHANGE)
# ---------------------------
MIN_VOLUME_24H=1000000       # Ensure good liquidity
MAX_SPREAD_PERCENTAGE=0.05   # Tight spread requirement
VOLATILITY_THRESHOLD=1.2     # Low volatility threshold
CONSECUTIVE_LOSS_LIMIT=2     # Stop after 2 consecutive losses

# Position Management (DO NOT CHANGE)
# --------------------------------
SCALE_IN_ON_DIP_PERCENTAGE=0.15    # Very conservative scaling
MAX_SCALE_IN_ATTEMPTS=2           # Limited scale-in attempts
MIN_PROFIT_TARGET=0.2            # Minimum profit target
MAX_DRAWDOWN_PERCENTAGE=1.5      # Maximum allowed drawdown

# Technical Indicators (DO NOT CHANGE)
# ---------------------------------
RSI_PERIOD=14                # Standard RSI period
RSI_OVERSOLD=35             # Conservative oversold
RSI_OVERBOUGHT=65           # Conservative overbought
MACD_FAST=12               # Standard MACD settings
MACD_SLOW=26
MACD_SIGNAL=9

